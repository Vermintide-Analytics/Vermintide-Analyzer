<Window x:Class="Vermintide_Analyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vermintide_Analyzer"
        xmlns:controls="clr-namespace:Vermintide_Analyzer.Controls"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:geared="clr-namespace:LiveCharts.Geared;assembly=LiveCharts.Geared"
        mc:Ignorable="d"
        Title="Vermintide Analyzer" MinHeight="605" MinWidth="1220" Height="1000" Width="1600" Background="{StaticResource ThemeDarker}">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200" Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <controls:NavMenu Grid.Column="0" />
        <Grid Grid.Column="1">
            <Border x:Name="ContentPane" BorderThickness="5" BorderBrush="{StaticResource ThemeMidtone}">
                <!--<controls:Dashboard />-->
            </Border>
        </Grid>
    </Grid>
</Window>
